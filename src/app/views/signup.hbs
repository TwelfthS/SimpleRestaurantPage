{{> header}}
<div class="container d-flex justify-content-center mt-3">
    <p class="fs-3 text-danger">{{error}}</p>
</div>
<div class="container d-flex justify-content-center align-items-center" style="min-height: 50vh">
    <form style="min-width: 35vh" class="mt-3" method="post">
    <div class="mb-3">
        
        <label for="name_input" class="form-label">Имя</label>
        <input class="form-control" id="name_input" name="name">
    </div>
    <div class="mb-3">
        <label for="username_input" class="form-label">Юзернейм</label>
        <input class="form-control" id="username_input" name="username">
    </div>
    <div class="mb-3">
        <label for="login_input" class="form-label">Логин</label>
        <input class="form-control" id="login_input" name="login">
    </div>
    <div class="mb-3">
        <label for="password_input" class="form-label">Пароль</label>
        <input type="password" class="form-control" id="password_input" name="password">
    </div>
    <div class="mb-3">
        <label for="password_repeat" class="form-label">Повторите пароль</label>
        <input type="password" class="form-control" id="password_repeat" name="repeat">
    </div>
    <div class="mb-3">
        <label for="role_select">Зарегистрироваться как:</label>
        <select name="role" id="role_select">
            <option value="waiter">Официант</option>
            <option value="admin">Администратор</option>
        </select>
    </div>
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
    </div>
    </form>
</div>